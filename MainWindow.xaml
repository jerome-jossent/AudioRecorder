<Window x:Class="Enregistreur_vocal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Enregistreur_vocal"
        mc:Ignorable="d"
        Title="Audio recorder" Height="390" Width="300" Icon="/Images/microphone.png">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock  x:Name="StatusText" Text="Ready..."/>
        </StatusBar>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel  Grid.Row="0" Margin="5,0,5,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="DeviceSelector" Height="25"/>
                    <Image Grid.Column="1" Margin="5,0,0,0" RenderOptions.BitmapScalingMode="Fant" Source="/Images/refresh.png" Width="30" MouseDown="BtnRefreshInput_MouseDown"/>
                </Grid>

                <!-- Boutons -->
                <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Margin="5" RenderOptions.BitmapScalingMode="Fant" Source="/Images/record.png" Width="30" MouseDown="BtnRecord_MouseDown"/>
                    <Image Margin="5" RenderOptions.BitmapScalingMode="Fant" Source="/Images/Stop.png" Width="30" MouseDown="BtnStopRec_Click"/>
                    <Image Margin="5" RenderOptions.BitmapScalingMode="Fant" Source="/Images/Lecture.png" Width="30" MouseDown="BtnPlay_Click"/>
                    <Image Margin="5" RenderOptions.BitmapScalingMode="Fant" Source="/Images/folder.png" Width="30" MouseDown="BtnFolder_Click"/>
                </StackPanel>

                <ProgressBar x:Name="LevelBar" Height="12" Minimum="0" Maximum="100" Margin="0,5"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox Name="_ckb_Buzz" Content="Run BuZZ automatically or with this :" VerticalAlignment="Center"/>
                    <Image Grid.Column="1" Margin="5" RenderOptions.BitmapScalingMode="Fant" Source="/Images/Lecture.png" Width="30" MouseDown="BtnBuzz_Click"/>
                </Grid>
                        <Button Margin="0,5" Content="DEBUG Pick Wave" Click="Debug_PickWave_Click"/>
            </StackPanel>

            <Border Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="_tbx_transcription" VerticalScrollBarVisibility="Visible" AcceptsReturn="True"
                             AllowDrop="True" PreviewDragOver="TextBox_PreviewDragOver" Drop="TextBox_Drop"/>
                    <StackPanel Grid.Row="1" Orientation="Vertical">
                        <Button Margin="0,5" Content="Send to LLM" Click="Send_to_LLM_Click"/>
                    </StackPanel>

                    <TextBox Grid.Row="2" x:Name="_tbx_reponseLLM" VerticalScrollBarVisibility="Visible" AcceptsReturn="True"/>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>

</Window>
