<Window x:Class="Enregistreur_vocal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Enregistreur_vocal"

        xmlns:jjo="clr-namespace:JJO_Tools"
        
        mc:Ignorable="d"        
        Title="Audio recorder" Height="390" Width="300" Icon="/Images/microphone.png"
        Loaded="IHM_Loaded"
        Closing="IHM_Closing"
        
        >
    <Window.Resources>
        <jjo:InvertableBooleanToVisibilityConverter x:Key="_Converter"/>
    </Window.Resources>
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock  x:Name="StatusText" Text="Ready..."/>
        </StatusBar>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Audio -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" RenderOptions.BitmapScalingMode="Fant" Source="/Images/refresh.png" Width="30" MouseDown="BtnRefreshInput_MouseDown"/>

                <ComboBox  Grid.Column="1" Margin="5,0" x:Name="DeviceSelector" Height="25" VerticalContentAlignment="Center" SelectionChanged="Audio_DeviceSelector_SelectionChanged"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" >

                    <ProgressBar x:Name="LevelBar" Height="10" Margin="-10,0" Width="30" Minimum="0" Maximum="100" Value="{Binding audio_amplitude, UpdateSourceTrigger=PropertyChanged}"
                                     RenderTransformOrigin="0.5,0.5" Foreground="#FFEE2D24" Background="White" BorderBrush="#FFBFBFBF">
                        <ProgressBar.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-90"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </ProgressBar.RenderTransform>
                    </ProgressBar>

                    <Grid Margin="5,0,0,0">
                        <Image RenderOptions.BitmapScalingMode="Fant" Source="/Images/record.png" Width="30" MouseDown="BtnRecord_MouseDown"
                               Visibility="{Binding audio_recording, Converter={StaticResource _Converter}, ConverterParameter=Inverted}"/>
                        <Image RenderOptions.BitmapScalingMode="Fant" Source="/Images/Stop.png" Width="30" MouseDown="BtnStopRec_Click"
                               Visibility="{Binding audio_recording, Converter={StaticResource _Converter}, ConverterParameter=Normal}"/>
                    </Grid>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="1">
                <!-- Path -->
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding recordingPath}" ToolTip="{Binding recordingPath}" TextWrapping="Wrap"/>
                    <Image Grid.Column="1" ToolTip="Open folder" Margin="0,5" RenderOptions.BitmapScalingMode="Fant" Source="/Images/folder.png" Width="30" MouseDown="BtnFolder_Click"/>
                </Grid>

                <!-- Transcription (boutons) -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Margin="0,5" Padding="10,5" Content="DEBUG Pick Wave" Click="Debug_PickWave_Click"/>
                    <CheckBox Grid.Column="1" Name="_ckb_Buzz" HorizontalAlignment="Right" Content="Auto Transcription or with this : " VerticalAlignment="Center"/>
                    <Image Grid.Column="2" Margin="0,5" RenderOptions.BitmapScalingMode="Fant" Source="/Images/Lecture.png" Width="30" MouseDown="BtnBuzz_Click"/>
                </Grid>
            </StackPanel>

            <!-- Transcription (text) -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBox x:Name="_tbx_transcription" VerticalScrollBarVisibility="Visible" AcceptsReturn="True"
                             AllowDrop="True" PreviewDragOver="Transcription_TextBox_PreviewDragOver" Drop="Transcription_TextBox_Drop"/>

                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch"/>

            <!-- LLM -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel  Orientation="Vertical">
                        <Button Margin="0,0,0,5" Padding="5" Content="Send to LLM" Click="LLM_Send_Manually"/>
                    </StackPanel>
                    <TextBox Grid.Row="1" x:Name="_tbx_reponseLLM" VerticalScrollBarVisibility="Visible" AcceptsReturn="True"/>
                </Grid>
            </Grid>
        </Grid>
    </DockPanel>

</Window>
